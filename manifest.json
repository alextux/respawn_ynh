{
    "name": "respawn",
    "id": "respawn",
    "description": {
       "en": "Get a copy of a website page on your own server with one click",
       "fr": "Obtenez une copy de la page d'un site sur son server personel en un click"
    },
    "developer": {
        "name": "alextuxy",
        "email": "tuxy@tuxcloud.fr.fr",
        "url": ""
    },
    "multi_instance": "false",
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "ask": {
                    "en": "Choose a domain for respawn",
                    "fr": "Choisissez un domaine pour respawn"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "ask": {
                    "en": "Choose a path for respawn",
                    "fr": "Choisissez un chemin pour votre respawn"
                },
                "example": "/respawn",
                "default": "/respawn"
            },
            {
                "name": "admin",
                "ask": {
                    "en": "Choose the YunoHost user",
                    "fr": "Choisissez l'utilisateur YunoHost associ√©"
                },
                "example": "johndoe"
            },
            {
                "name": "is_public",
                "ask": {
                    "en": "Is it a public website ?",
                    "fr": "Est-ce un site public ?"
                },
                "choices": ["Yes", "No"],
                "default": "No"
            }
        ]
    }
}
